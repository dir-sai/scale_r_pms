# App Configuration
VITE_APP_NAME=Scale-R PMS
VITE_APP_URL=http://localhost:3000

# API Configuration
VITE_API_URL=http://localhost:8000/api/v1

# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/scale_r_pms?schema=public"

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# OAuth Providers
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Redis Configuration (for rate limiting)
UPSTASH_REDIS_URL=your-redis-url
UPSTASH_REDIS_TOKEN=your-redis-token

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@scale-r-pms.com

# Storage Configuration (for file uploads)
STORAGE_PROVIDER=local # or s3, cloudinary, etc.
STORAGE_ACCESS_KEY=your-storage-access-key
STORAGE_SECRET_KEY=your-storage-secret-key
STORAGE_BUCKET=your-storage-bucket
STORAGE_REGION=your-storage-region

# Note: Create a copy of this file named '.env' and fill in your actual values
# Do not commit the actual .env file to version control 